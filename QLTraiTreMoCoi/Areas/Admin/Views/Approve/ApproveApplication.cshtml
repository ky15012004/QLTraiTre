@model QLTraiTreMoCoi.Areas.Admin.Models.DKGuiTreDetailRes

<div class="d-flex">
    <div style="height: calc(100vh - 179px); width: 22%;"></div>

    <div class="px-5 py-3" style="background-color: #e0e0e0; min-height: 50vh; width: 78%;">
        <div class="">
            <p class="fs-5">DUYỆT ĐƠN ĐĂNG KÝ</p>
            <div class="shadow bg-white rounded p-5 position-relative" style="width: 50vw">
                <a asp-area="Admin" asp-controller="Approve" asp-action="ListApprove" class="position-absolute" style="top: 15px; right: 20px;">
                    <i class="fa-solid fa-xmark fs-4 text-black"></i>
                </a>

                <div class="d-flex align-items-start gap-5">
                    <div class="d-flex align-items-center flex-column gap-3" style="width: 30%;">
                        <img id="previewImage" src="@Model.UrlAnh" class="w-100" style="height: 200px; object-fit: cover;" alt="Ảnh trẻ">
                    </div>

                    <div style="width: 65%;" class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Họ và tên:</span>
                            <span>@Model.HoTenTre</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Giới tính:</span>
                            <span>@(Model.GioiTinhTre == 1 ? "Nam" : "Nữ")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Ngày sinh:</span>
                            <span>@Model.NgaySinhTre.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Dân tộc:</span>
                            <span>@Model.DanTocTre</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Hoàn cảnh:</span>
                            <span>
                                @(Model.HoanCanh == 1 ? "Trẻ bị bỏ rơi" :
                                    Model.HoanCanh == 2 ? "Mồ côi cha mẹ" : "Khác")
                            </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Ngày đăng ký:</span>
                            <span>@Model.NgayDangKy.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Người gửi:</span>
                            <span>@Model.TenNguoiGui</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Quan hệ với người gửi:</span>
                            <span>
                                @(Model.QuanHeVoiNguoiGui == 1 ? "Cha/Mẹ" :
                                    Model.QuanHeVoiNguoiGui == 2 ? "Người giám hộ" :
                                    Model.QuanHeVoiNguoiGui == 3 ? "Tình nguyện viên" : "Không rõ")
                            </span>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-3">
                            <form asp-action="ApproveConfirm" asp-route-id="@Model.Id" method="post">
                                <button class="btn btn-primary px-4" type="submit">Duyệt</button>
                            </form>
                            <form asp-action="CancelRequest" asp-route-id="@Model.Id" method="post">
                                <button class="btn btn-danger px-4" type="submit">Hủy</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
