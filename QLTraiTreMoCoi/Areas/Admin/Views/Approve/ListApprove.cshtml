@model List<QLTraiTreMoCoi.Areas.Admin.Models.DKGuiTreRes>

@{
    ViewData["Title"] = "Duyệt đơn đăng ký";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">
    <div style="height: calc(100vh - 179px); width: 22%;"></div>

    <div class="px-5 py-3" style="background-color: #e0e0e0; min-height: 50vh; width: 78%;">
        <div class="">
            <p class="fs-5">DUYỆT ĐƠN ĐĂNG KÝ</p>
            <div class="shadow bg-white rounded p-5 position-relative">
                <table class="table table-bordered align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Ảnh</th>
                            <th>Họ và tên</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Hoan Canh</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="childrenTable">
                        
                    <tbody id="childrenTable">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center">
                                    <img src="@item.ImageUrl" alt="Avatar" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;">
                                </td>
                                <td class="text-center">@item.HoTen</td>
                                <td class="text-center">@(item.GioiTinh == 1 ? "Nam" : "Nữ")</td>
                                <td class="text-center">@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                        @(item.HoanCanh == 1 ? "Trẻ bị bỏ rơi" : item.HoanCanh == 2 ? "Mồ côi cha mẹ" : "Không rõ")
                                </td>
                                <td class="text-center">
                                    <a asp-area="Admin" asp-controller="Approve" asp-action="ApproveApplication" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                            }

                    </tbody>
                    </tbody>
                </table>
                <nav class="d-flex justify-content-center mt-4">
                    <ul class="pagination" id="pagination">
                        <!-- JavaScript sẽ tạo nội dung phân trang ở đây -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
