<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<body>
    <div style="margin-bottom: 11rem"></div>
    <header class="bg-primary-color position-fixed" style="padding: 30px 9%; top: 0px; left: 0px; width: 100vw; z-index: 1000;">
        <div class="d-flex justify-content-between align-items-center">
            <!-- logo -->
            <div class="d-flex align-items-center gap-3">
                <img src="~/images/image.png" class="rounded" style="width: 100px; height: 70px;" alt="">
                <p class="text-white fs-5 m-0">Trại trẻ mồ côi <br>TP. Đà Nẵng</p>
            </div>
            <div class="d-flex align-items-center gap-5">
                <!-- search -->
                <div class="d-flex gap-2 p-2 rounded bg-white align-items-center">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input style="border: none; outline: none;" type="text" placeholder="Tìm kiếm thông tin">
                </div>
                <!-- icon -->
                <div class="text-white d-flex align-items-center gap-4">
                    <div class="d-flex align-items-center gap-2">
                        <div style="width: 40px; height: 40px;"
                             class="d-flex align-items-center justify-content-center rounded-circle bg-black">
                            <i class="fa-solid fa-phone"></i>
                        </div>
                        0346387246
                    </div>
                    <a href="" class="text-white text-decoration-none">Đăng nhập</a>
                    <a href="" class="text-white text-decoration-none">Đăng ký</a>
                </div>
            </div>
        </div>
        <nav class="d-flex gap-5 align-items-center mt-4">
            <a asp-area="User" asp-controller="Home" asp-action="Home" class="text-decoration-none text-white">Trang chủ</a>
            <a asp-area="User" asp-controller="Home" asp-action="UpdateInfo" class="text-decoration-none text-white">Thông tin cá nhân</a>
            <a asp-area="User" asp-controller="Home" asp-action="RegisterChild" class="text-decoration-none text-white">Đăng ký gửi trẻ</a>
            <a asp-area="User" asp-controller="Home" asp-action="AdoptChild" class="text-decoration-none text-white">Đăng ký nhận nuôi trẻ</a>
        </nav>
    </header>
    <div class="position-fixed bg-white p-3" style="top: 179px; left: 0; max-height: calc(100vh - 179px); width: 22%;">
        <div class="d-flex flex-column gap-2">
            <a href="" class="text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-list"></i> Thống kê</a>
            <a asp-area="Admin" asp-controller="Account" asp-action="ListAccount" class="text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-user"></i> Tài Khoản</a>
            <a asp-area="Admin" asp-controller="Home" asp-action="ListAccept" class="text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-square-check"></i> Xác nhận trẻ</a>
            <a asp-area="Admin" asp-controller="Approve" asp-action="ListApprove" class="text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-thumbs-up"></i> Duyệt đơn đăng ký</a>
            <a asp-area="Admin" asp-controller="Home" asp-action="ListChild" class="active text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-user"></i> Trẻ</a>
            <a href="" style="bottom: 20px; left: 20px;" class="position-fixed text-hover text-black px-3 py-2 d-flex align-items-center gap-3 text-decoration-none"><i class="fa-solid fa-arrow-right-from-bracket"></i> Log out</a>
        </div>
    </div>

    <div>        
            @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
